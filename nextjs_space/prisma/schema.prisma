
generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/gabi_cleaning/nextjs_space/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model QuoteRequest {
  id        String   @id @default(cuid())
  name      String
  phone     String
  address   String?
  service   String
  size      String?
  date      String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("quote_requests")
}

model Booking {
  id              String   @id @default(cuid())
  serviceType     String   // 'home' or 'office'
  zipCode         String
  service         String
  frequency       String
  bedrooms        String?
  bathrooms       String?
  sqft            String?
  partialCleaning Boolean  @default(false)
  extras          String[] // Array of extra service IDs
  date            String?
  firstName       String
  lastName        String
  email           String
  secondaryEmail  String?
  phone           String
  secondaryPhone  String?
  textReminders   Boolean  @default(true)
  address         String?
  aptNo           String?
  specialNotes    String?
  total           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("bookings")
}
